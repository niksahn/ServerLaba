{
  "title": "Microservices Overview",
  "uid": "microservices-overview",
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 1,
  "panels": [
    {
      "type": "stat",
      "title": "Total Services",
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 },
      "targets": [
        { "expr": "count(up)", "refId": "A" }
      ],
      "options": { "reduceOptions": { "calcs": ["last"] }, "orientation": "horizontal" }
    },
    {
      "type": "stat",
      "title": "Services Up",
      "gridPos": { "x": 6, "y": 0, "w": 6, "h": 4 },
      "targets": [
        { "expr": "sum(up)", "refId": "A" }
      ],
      "options": { "reduceOptions": { "calcs": ["last"] }, "orientation": "horizontal" }
    },
    {
      "type": "stat",
      "title": "Services Down",
      "gridPos": { "x": 12, "y": 0, "w": 6, "h": 4 },
      "targets": [
        { "expr": "count(up) - sum(up)", "refId": "A" }
      ],
      "options": { "reduceOptions": { "calcs": ["last"] }, "orientation": "horizontal" }
    },
    {
      "type": "timeseries",
      "title": "Total HTTP Requests Rate",
      "gridPos": { "x": 0, "y": 4, "w": 24, "h": 8 },
      "targets": [
        { "expr": "sum(rate(http_requests_total[5m]))", "refId": "A" },
        { "expr": "sum(rate(http_server_requests_seconds_count[5m]))", "refId": "B" }
      ]
    },
    {
      "type": "timeseries",
      "title": "Service Status",
      "gridPos": { "x": 0, "y": 12, "w": 12, "h": 8 },
      "targets": [
        { "expr": "up", "refId": "A" }
      ]
    },
    {
      "type": "timeseries",
      "title": "Total Errors Rate",
      "gridPos": { "x": 12, "y": 12, "w": 12, "h": 8 },
      "targets": [
        { "expr": "sum(rate(http_requests_total{status_code=~\"5..\"}[5m]))", "refId": "A" },
        { "expr": "sum(rate(http_server_requests_seconds_count{status=~\"5..\"}[5m]))", "refId": "B" }
      ]
    },
    {
      "type": "timeseries",
      "title": "Memory Usage by Service",
      "gridPos": { "x": 0, "y": 20, "w": 12, "h": 8 },
      "targets": [
        { "expr": "process_working_set_bytes{job=\"authservice\"}", "refId": "A" },
        { "expr": "jvm_memory_used_bytes{job=\"user-service\"}", "refId": "B" },
        { "expr": "jvm_memory_used_bytes{job=\"app-service\"}", "refId": "C" }
      ]
    },
    {
      "type": "timeseries",
      "title": "Active Connections",
      "gridPos": { "x": 12, "y": 20, "w": 12, "h": 8 },
      "targets": [
        { "expr": "http_requests_in_flight{job=\"authservice\"}", "refId": "A" },
        { "expr": "http_server_requests_seconds_active{job=\"user-service\"}", "refId": "B" },
        { "expr": "http_server_requests_seconds_active{job=\"app-service\"}", "refId": "C" },
        { "expr": "http_requests_in_flight{job=\"api-gateway\"}", "refId": "D" }
      ]
    }
  ]
}
